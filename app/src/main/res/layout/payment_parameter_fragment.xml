<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.paymentParameter.paymentParameter">
    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressbar5"
        android:layout_gravity="center"
        android:visibility="gone"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginTop="25dp"
        android:layout_gravity="center"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="28dp"
            android:layout_gravity="center"
            android:text="Update Record"
            android:layout_marginBottom="20dp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Employee Id"
            android:id="@+id/empidupdate"
            android:inputType="number"
            android:layout_marginBottom="15dp"
            android:textSize="20sp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Year"
            android:id="@+id/empyearupdate"
            android:inputType="number"
            android:layout_marginBottom="15dp"
            android:textSize="20sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Month"
            android:text="Select Month"
            android:textSize="18sp"/>
        <Spinner
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:hint="Employee Id"
            android:id="@+id/empMonthupdate"
            android:layout_marginBottom="15dp"
            android:textSize="20sp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Absence"
            android:id="@+id/empabsent"
            android:inputType="number"
            android:layout_marginBottom="15dp"
            android:textSize="20sp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Over Time"
            android:id="@+id/overtime"
            android:inputType="number"
            android:layout_marginBottom="15dp"
            android:textSize="20sp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Seasonal Bonus"
            android:inputType="number"
            android:id="@+id/seasonalBonus"
            android:layout_marginBottom="15dp"
            android:textSize="20sp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Other Bonus"
            android:id="@+id/otherBonus"
            android:inputType="number"
            android:layout_marginBottom="25dp"
            android:textSize="20sp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Deduction"
            android:id="@+id/otherDeduction"
            android:inputType="number"
            android:layout_marginBottom="25dp"
            android:textSize="20sp"/>
        <TextView
            android:id="@+id/update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:background="@drawable/outline"
            android:padding="10dp"
            android:text="UPDATE"
            android:textColor="#ffffff"
            android:textSize="25sp"
            android:textStyle="bold" />
    </LinearLayout>



</FrameLayout>