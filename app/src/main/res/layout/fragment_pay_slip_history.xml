<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/history"
    android:background="#ffffff"
    tools:context=".ui.paymentHistory.paySlip_history">
    <LinearLayout
        android:layout_width="match_parent"
        android:paddingLeft="15dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="55dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageViewsz"
                android:layout_width="27dp"
                android:layout_height="32dp"
                android:layout_gravity="left"
                android:layout_marginTop="45dp"
                android:src="@drawable/back" />

            <TextView
                android:id="@+id/last_paymentsz"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="25dp"
                android:paddingEnd="5dp"
                android:gravity="end"
                android:text="Last payment on: xx-xxxx-xxxx"
                android:textSize="19sp"
                android:textStyle="italic" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/dpcx"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="125dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="10dp"
                android:src="@drawable/dpc" />
        </LinearLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Name"
                        android:layout_marginRight="30dp"
                        android:textSize="22sp"
                        android:layout_marginBottom="25dp"
                        android:id="@+id/emailt"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Employee Id"
                        android:layout_marginBottom="25dp"
                        android:layout_marginRight="30dp"
                        android:textSize="22sp"
                        android:id="@+id/empidworkt"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Year"
                        android:layout_marginRight="30dp"
                        android:textSize="22sp"
                        android:layout_marginBottom="25dp"
                        android:id="@+id/yeart"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Month"
                        android:layout_marginRight="30dp"
                        android:layout_marginBottom="25dp"
                        android:textSize="22sp"
                        android:id="@+id/monthT"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Seas. Bonus"
                        android:layout_marginBottom="25dp"
                        android:layout_marginRight="30dp"
                        android:textSize="22sp"
                        android:id="@+id/seasonalT"/>

                    <TextView
                        android:id="@+id/contt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="30dp"
                        android:layout_marginBottom="25dp"
                        android:text="Other Bonus"
                        android:textSize="22sp" />
                    <TextView
                        android:id="@+id/jdate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="30dp"
                        android:layout_marginBottom="25dp"
                        android:text="Absent"
                        android:textSize="22sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="PF cut"
                        android:layout_marginBottom="25dp"
                        android:layout_marginRight="30dp"
                        android:textSize="22sp"
                        android:id="@+id/pfcutT"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tax"
                        android:layout_marginBottom="25dp"
                        android:layout_marginRight="30dp"
                        android:textSize="22sp"
                        android:id="@+id/taxT"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Other Deduct."
                        android:layout_marginBottom="25dp"
                        android:layout_marginRight="30dp"
                        android:textSize="22sp"
                        android:id="@+id/titleofjobt"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Salary Paid"
                        android:layout_marginBottom="25dp"
                        android:layout_marginRight="30dp"
                        android:textSize="22sp"
                        android:id="@+id/salary"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total Deduct."
                        android:layout_marginBottom="25dp"
                        android:layout_marginRight="30dp"
                        android:textSize="22sp"
                        android:id="@+id/providentfundt"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Name"
                            android:scrollHorizontally="true"
                            android:layout_marginRight="30dp"
                            android:textSize="22sp"
                            android:layout_marginBottom="25dp"
                            android:id="@+id/nnname"/>
                    </HorizontalScrollView>
                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Employee Id"
                            android:scrollHorizontally="true"
                            android:layout_marginBottom="25dp"
                            android:layout_marginRight="30dp"
                            android:textSize="22sp"
                            android:id="@+id/empidworka"/>
                    </HorizontalScrollView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Year"
                        android:layout_marginRight="30dp"
                        android:textSize="22sp"
                        android:layout_marginBottom="25dp"
                        android:id="@+id/yearE"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Month"
                        android:layout_marginRight="30dp"
                        android:layout_marginBottom="25dp"
                        android:textSize="22sp"
                        android:id="@+id/montheE"/>
                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Seasonal"
                            android:scrollHorizontally="true"
                            android:layout_marginBottom="25dp"
                            android:layout_marginRight="30dp"
                            android:textSize="22sp"
                            android:id="@+id/seasonalE"/>
                    </HorizontalScrollView>
                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Other B"
                            android:scrollHorizontally="true"
                            android:layout_marginBottom="25dp"
                            android:layout_marginRight="30dp"
                            android:textSize="22sp"
                            android:id="@+id/otherE"/>
                    </HorizontalScrollView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="absent"
                        android:layout_marginBottom="25dp"
                        android:layout_marginRight="30dp"
                        android:textSize="22sp"
                        android:id="@+id/absent"/>
                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="pfCut"
                            android:scrollHorizontally="true"
                            android:layout_marginBottom="25dp"
                            android:layout_marginRight="30dp"
                            android:textSize="22sp"
                            android:id="@+id/pfcytE"/>
                    </HorizontalScrollView>
                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tax"
                            android:scrollHorizontally="true"
                            android:layout_marginBottom="25dp"
                            android:layout_marginRight="30dp"
                            android:textSize="22sp"
                            android:id="@+id/taxcut"/>
                    </HorizontalScrollView>
                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Other cut"
                            android:scrollHorizontally="true"
                            android:layout_marginBottom="25dp"
                            android:layout_marginRight="30dp"
                            android:textSize="22sp"
                            android:id="@+id/oCutE"/>
                    </HorizontalScrollView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Salary"
                        android:layout_marginBottom="25dp"
                        android:layout_marginRight="30dp"
                        android:textSize="22sp"
                        android:id="@+id/paidSalaryE"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total deduct"
                        android:layout_marginBottom="25dp"
                        android:layout_marginRight="30dp"
                        android:textSize="22sp"
                        android:id="@+id/tDeductE"/>

                </LinearLayout>




            </LinearLayout>
        </ScrollView>
    </LinearLayout>


</FrameLayout>