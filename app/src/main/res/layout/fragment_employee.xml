<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/backtolist"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff">

    <ProgressBar
        android:id="@+id/progressbar3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingLeft="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="55dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="27dp"
                android:layout_height="32dp"
                android:layout_gravity="left"
                android:layout_marginTop="45dp"
                android:src="@drawable/back" />

            <TextView
                android:id="@+id/last_payment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="25dp"
                android:gravity="end"
                android:paddingEnd="5dp"
                android:text="Last payment on: xx-xxxx-xxxx"
                android:textSize="19sp"
                android:textStyle="italic" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/dpc"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="125dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="10dp"
                android:src="@drawable/dpc" />

            <ImageView
                android:id="@+id/changepic"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="bottom"
                android:layout_marginRight="45dp"
                android:layout_marginBottom="20dp"
                android:src="@drawable/adddp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/upload"
            android:layout_width="119dp"
            android:layout_height="31dp"
            android:layout_gravity="center"
            android:src="@drawable/upload"
            android:visibility="gone" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/emailt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="30dp"
                        android:layout_marginBottom="25dp"
                        android:text="Name"
                        android:textSize="22sp" />

                    <TextView
                        android:id="@+id/empidworkt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="30dp"
                        android:layout_marginBottom="25dp"
                        android:text="Employee Id"
                        android:textSize="22sp" />

                    <TextView
                        android:id="@+id/admt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="30dp"
                        android:layout_marginBottom="25dp"
                        android:text="Date of Birth"
                        android:textSize="22sp" />

                    <TextView
                        android:id="@+id/Gendert"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="30dp"
                        android:layout_marginBottom="25dp"
                        android:text="Gender"
                        android:textSize="22sp" />

                    <TextView
                        android:id="@+id/corpt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="30dp"
                        android:layout_marginBottom="25dp"
                        android:text="Email"
                        android:textSize="22sp" />

                    <TextView
                        android:id="@+id/contt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="30dp"
                        android:layout_marginBottom="25dp"
                        android:text="Phone no."
                        android:textSize="22sp" />

                    <TextView
                        android:id="@+id/jdate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="30dp"
                        android:layout_marginBottom="25dp"
                        android:text="Joining Date"
                        android:textSize="22sp" />

                    <TextView
                        android:id="@+id/accountbankt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="30dp"
                        android:layout_marginBottom="25dp"
                        android:text="Account no."
                        android:textSize="22sp" />

                    <TextView
                        android:id="@+id/deptofemot"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="30dp"
                        android:layout_marginBottom="25dp"
                        android:text="Department"
                        android:textSize="22sp" />

                    <TextView
                        android:id="@+id/titleofjobt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="30dp"
                        android:layout_marginBottom="25dp"
                        android:text="Job Title"
                        android:textSize="22sp" />

                    <TextView
                        android:id="@+id/pfrate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="30dp"
                        android:layout_marginBottom="25dp"
                        android:text="PF rate"
                        android:textSize="22sp" />

                    <TextView
                        android:id="@+id/salary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="30dp"
                        android:layout_marginBottom="25dp"
                        android:text="Salary"
                        android:textSize="22sp" />

                    <TextView
                        android:id="@+id/providentfundt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="30dp"
                        android:layout_marginBottom="25dp"
                        android:text="Fund"
                        android:textSize="22sp" />

                    <TextView
                        android:id="@+id/employeeloant"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="30dp"
                        android:layout_marginBottom="25dp"
                        android:text="Loan"
                        android:textSize="22sp" />

                    <TextView
                        android:id="@+id/addresssst"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="30dp"
                        android:layout_marginBottom="25dp"
                        android:text="Address"
                        android:textSize="22sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/nnname"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="30dp"
                            android:layout_marginBottom="25dp"
                            android:scrollHorizontally="true"
                            android:text="Name"
                            android:textSize="22sp" />
                    </HorizontalScrollView>

                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/empidwork"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="30dp"
                            android:layout_marginBottom="25dp"
                            android:scrollHorizontally="true"
                            android:text="Employee Id"
                            android:textSize="22sp" />
                    </HorizontalScrollView>

                    <TextView
                        android:id="@+id/admttts"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="30dp"
                        android:layout_marginBottom="25dp"
                        android:text="Date of Birth"
                        android:textSize="22sp" />

                    <TextView
                        android:id="@+id/Genderrrr"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="30dp"
                        android:layout_marginBottom="25dp"
                        android:text="Gender"
                        android:textSize="22sp" />

                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/corpggts"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="30dp"
                            android:layout_marginBottom="25dp"
                            android:scrollHorizontally="true"
                            android:text="Email"
                            android:textSize="22sp" />
                    </HorizontalScrollView>

                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/cont"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="30dp"
                            android:layout_marginBottom="25dp"
                            android:scrollHorizontally="true"
                            android:text="Phone no."
                            android:textSize="22sp" />
                    </HorizontalScrollView>

                    <TextView
                        android:id="@+id/joinindate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="30dp"
                        android:layout_marginBottom="25dp"
                        android:text="Joining Date"
                        android:textSize="22sp" />

                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/accountbank"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="30dp"
                            android:layout_marginBottom="25dp"
                            android:scrollHorizontally="true"
                            android:text="Account no."
                            android:textSize="22sp" />
                    </HorizontalScrollView>

                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/deptofemo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="30dp"
                            android:layout_marginBottom="25dp"
                            android:scrollHorizontally="true"
                            android:text="Department"
                            android:textSize="22sp" />
                    </HorizontalScrollView>

                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/titleofjob"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="30dp"
                            android:layout_marginBottom="25dp"
                            android:scrollHorizontally="true"
                            android:text="Job Title"
                            android:textSize="22sp" />
                    </HorizontalScrollView>

                    <TextView
                        android:id="@+id/pfset"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="30dp"
                        android:layout_marginBottom="25dp"
                        android:text="PF rate"
                        android:textSize="22sp" />

                    <TextView
                        android:id="@+id/salaryset"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="30dp"
                        android:layout_marginBottom="25dp"
                        android:text="Salary"
                        android:textSize="22sp" />

                    <TextView
                        android:id="@+id/providentfund"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="30dp"
                        android:layout_marginBottom="25dp"
                        android:text="Fund"
                        android:textSize="22sp" />

                    <TextView
                        android:id="@+id/employeeloan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="30dp"
                        android:layout_marginBottom="25dp"
                        android:text="Loan"
                        android:textSize="22sp" />

                    <TextView
                        android:id="@+id/addressss"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="30dp"
                        android:layout_marginBottom="25dp"
                        android:text="Address"
                        android:textSize="22sp" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</FrameLayout>
